# Application
RUST_LOG=ticket_system=debug,tower_http=debug
PORT=8000
HOST=0.0.0.0
ENVIRONMENT=development

# Database
DATABASE_URL=postgresql://ticket_user:ticket_password@db:5432/ticket_system
POSTGRES_USER=ticket_user
POSTGRES_PASSWORD=ticket_password
POSTGRES_DB=ticket_system
DB_POOL_SIZE=20

# Redis (cache only)
REDIS_URL=redis://cache:6379
REDIS_POOL_SIZE=20

# Kafka
KAFKA_BROKERS=kafka:9092
KAFKA_CONSUMER_GROUP_ID=ticket-system

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-min-32-characters-long
JWT_EXPIRES_IN_HOURS=24

# External Services
EXTERNAL_TICKET_SERVICE_URL=https://ticket-provider.api/v1
EXTERNAL_TICKET_SERVICE_API_KEY=your_ticket_api_key
EXTERNAL_PAYMENT_SERVICE_URL=https://payment-provider.api/v1
EXTERNAL_PAYMENT_SERVICE_API_KEY=your_payment_api_key

# Circuit Breaker
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT_SECONDS=60

# Feature Flags
ENABLE_AUTH=true
ENABLE_RATE_LIMITING=true
ENABLE_ANALYTICS=true